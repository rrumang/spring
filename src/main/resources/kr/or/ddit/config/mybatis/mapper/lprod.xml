<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="lprod">
  <!--전체 lprod 리스트 조회  -->
  	<select id="lprodList" resultType="lprodVo">
  		select * from lprod order by lprod_id
  	</select>
  	
  	<!-- 특정 id 조회  -->
  	<select id="getId" parameterType="String" resultType="lprodVo">
  		select * from lprod where lprod_id = #{lprod_id}
  	</select>
  	
  	<!--lprod 페이지 리스트 조회  -->
  	<select id="lprodPagingList" parameterType="pageVo" resultType="lprodVo">
  		<![CDATA[
		select *
		 from
		(select a.*, rownum rn
		 from 
		(select a.*
		 from lprod a
		 order by lprod_id) a  )
		 where rn >= (#{page}-1)*#{pageSize} +1 and rn <= #{page}*#{pageSize}
		]]>
  	</select>
  	
  	<!-- 전체수 조회 -->
  	<select id="lprodCnt" resultType="int">
  		select count(*)
  		from lprod
  	</select>
  	
  </mapper>